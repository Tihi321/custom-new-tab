{
  "manifest_version": 3,
  "name": "Custom New Tab",
  "version": "1.1.0",
  "description": "Set a custom URL for new tabs and optionally open it via extension icon",
  "permissions": ["storage", "tabs", "contextMenus"],
  "action": {
    "default_icon": "icons/icon.svg",
    "default_title": "Custom New Tab"
  },
  "background": {
    "service_worker": "background.js"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "options_page": "popup.html",
  "icons": {
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
}
